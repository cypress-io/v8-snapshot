{
  "name": "v8-snapshot",
  "version": "0.3.1",
  "description": "Various utils related to create v8 snapshots for electron apps.",
  "main": "dist/v8-snapshot.js",
  "types": "dist/v8-snapshot.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.json && (rm -rf ./dist/blueprint && cp -R ./src/blueprint ./dist/blueprint)",
    "prepublish": "rm -rf ./dist/tests",
    "pretest": "make pretest",
    "test": "tape dist/tests/**/*.js",
    "debug-test": "node --inspect-brk -r ./tests/utils/hook-require.js tests/**/*.ts",
    "lint": "prettier -c ./src/",
    "lint:fix": "prettier --format ./src",
    "watch": "tsc -p ./tsconfig.json --watch"
  },
  "directories": {
    "dist": "./dist"
  },
  "files": [
    "dist/*"
  ],
  "author": {
    "name": "Thorsten Lorenz",
    "email": "thlorenz@gmx.de",
    "url": "http://thlorenz.com"
  },
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@thlorenz/electron-mksnapshot": "^0.1.0",
    "ansi-colors": "^4.1.1",
    "debug": "^4.1.1",
    "packherd": "^0.3.1",
    "resolve-from": "^5.0.0",
    "snapbuild-darwin-x64": "^0.2.2",
    "supports-color": "^8.1.1",
    "terser": "^5.3.2",
    "tslib": "^2.0.1",
    "worker-nodes": "^2.3.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/node": "^12.20.4",
    "@types/tape": "^4.13.0",
    "electron": "^10.1.2",
    "prettier": "^2.2.1",
    "spok": "^1.3.0",
    "tape": "^5.2.2",
    "typescript": "^4.2.3"
  }
}
