{
  "name": "v8-snapshot-utils",
  "version": "0.0.0",
  "description": "Various utils related to create v8 snapshots for electron apps.",
  "main": "dist/v8-snapshot-utils.js",
  "types": "src/v8-snapshot-utils.ts",
  "scripts": {
    "build": "tsc && (rm -rf ./dist/blueprint && cp -R ./src/blueprint ./dist/blueprint)",
    "pretest": "tsc && (rm -rf ./dist/tests/doctor/fixtures && cp -R ./src/tests/doctor/fixtures ./dist/tests/doctor/fixtures)",
    "test": "tape dist/tests/**/*.js",
    "debug-test": "node --inspect-brk -r ./tests/utils/hook-require.js tests/**/*.ts",
    "lint": "prettier -c ./src/",
    "lint:fix": "prettier --format ./src",
    "watch": "tsc --watch"
  },
  "directories": {
    "dist": "./dist"
  },
  "author": {
    "name": "Thorsten Lorenz",
    "email": "thlorenz@gmx.de",
    "url": "http://thlorenz.com"
  },
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/tape": "^4.13.0",
    "debug": "^4.1.1",
    "dirt-simple-file-cache": "^0.1.0",
    "electron": "^10.1.2",
    "electron-mksnapshot": "^10.0.0",
    "prettier": "^2.2.1",
    "spok": "^1.3.0",
    "tslib": "^2.0.1"
  },
  "dependencies": {
    "@types/node": "^12.20.4",
    "ansi-colors": "^4.1.1",
    "packherd": "thlorenz/packherd",
    "supports-color": "^8.1.1",
    "terser": "^5.3.2",
    "worker-nodes": "^2.3.0"
  }
}
